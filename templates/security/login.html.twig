{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('asset/css/all.css') }}">
    <link rel="stylesheet" href="{{ asset('asset/css/bootstrap.css') }}">
    <link rel="stylesheet" href="{{ asset('asset/css/bootstrap-reboot.css') }}">
    <link rel="stylesheet" href="{{ asset('asset/css/bootstrap-grid.css') }}">
    <link rel="stylesheet" href="{{ asset('asset/css/style.css') }}">
{% endblock %}

{% block body %}

<div class="container">
    <form method="post">

        <div class="row">

            <div class="col-md-6 offset-md-3 col-lg-4 offset-lg-4 col-8 offset-2">
                {% if error %}
                <div class="mb-3 alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <div class="mb-3">
                <h1 class="text-center">Sign In</h1>
            </div>

            <div class="mb-3">
                <div class="input-group">
                  <div class="input-group-prepend">
                    <div class="input-group-text"><span class="fas fa-user"></span> </div>
                  </div>
                  <input type="email" value="{{ last_username }}" name="email" class="form-control" placeholder="E-mail" required autofocus>
                </div>
            </div>

            <div class="mb-3">
                <div class="input-group">
                  <div class="input-group-prepend">
                    <div class="input-group-text"> <span class="fas fa-lock"></span></div>
                  </div>
                  <input type="password" name="password" class="form-control" placeholder="Password" required>
                </div>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                </div>
            
                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html
                #}
                <div class=" checkbox mb-2">
                    <label class="mr-4 pl-3">
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                    <a href="#" class="ml-3 normal">forget password ?</a>
                </div>


            {% if app.user %}
                <div class="mb-3mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('logout') }}">Logout</a>
                </div>
            {% endif %}
            
            </div>
        
        </div>
    
    </form>

</div>
{% endblock %}

