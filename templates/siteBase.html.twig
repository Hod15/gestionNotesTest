<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome{% endblock %}</title>

        {% block stylesheets %}
            {% block styleToAdd %}{% endblock %}
            <!--Font awesome-->
            <link rel="stylesheet" href="{{ asset('asset/css/all.css') }}">
            <!-- Toggles CSS -->
            <link href="{{ asset('DashAsset/vendors4/jquery-toggles/css/toggles.css')}}" rel="stylesheet" type="text/css">
            <link href="{{ asset('DashAsset/vendors4/jquery-toggles/css/themes/toggles-light.css')}}" rel="stylesheet" type="text/css">
            
            <!-- Toastr CSS -->
            <link href="{{ asset('DashAsset/vendors4/jquery-toast-plugin/dist/jquery.toast.min.css')}}" rel="stylesheet" type="text/css">
        
            <!-- Custom CSS -->
            <link rel="stylesheet" href="{{ asset('DashAsset/vendors4/bootstrap/dist/css/bootstrap.min.css')}}">
            <link href="{{ asset('DashAsset/dist/css/style.css')}}" rel="stylesheet" type="text/css">
        {% endblock %}
    </head>
    <body >
        <main class="hk-wrapper hk-alt-nav">
            
            {% block topNav %}
                <!-- Top Navbar -->
                    <nav class="navbar navbar-expand-xl navbar-light fixed-top hk-navbar">
                        <a class="navbar-brand font-weight-700 text-uppercase" href="{{ path('dashboard') }}">
                            Gestion des notes
                        </a>
                        <ul class="navbar-nav hk-navbar-content">
                            {% if "ROLE_ADMIN" in app.user.roles %}
                                <li class="nav-item">
                                    <a class="nav-link nav-link-hover" href="{{ path('site_administration') }}"><span class="feather-icon"><i data-feather="settings"></i></span></a>
                                </li>
                            {% endif %}
                            <li class="nav-item dropdown dropdown-authentication">
                                <a class="nav-link dropdown-toggle no-caret" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <div class="media">
                                        <div class="media-img-wrap">
                                            <div class="avatar">
                                                <img src="{{ asset('DashAsset/dist/img/avatar12.jpg')}}" alt="user" class="avatar-img rounded-circle">
                                            </div>
                                            <span class="badge badge-success badge-indicator"></span>
                                        </div>
                                        <div class="media-body">
                                            <span class="text-uppercase">{{app.user.name}}<i class="zmdi zmdi-chevron-down"></i></span>
                                        </div>
                                    </div>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right" data-dropdown-in="flipInX" data-dropdown-out="flipOutX">
                                    <span class="dropdown-item" ><i class="dropdown-icon zmdi zmdi-account"></i><span>{{app.user.name}}</span></span>
                                    <span class="dropdown-item" ><i class="dropdown-icon zmdi zmdi-account"></i><span>{{app.user.lastName}}</span></span>
                                    <span class="dropdown-item" ><i class="dropdown-icon fa fa-envelope"></i><span>{{app.user.email}}</span></span>
                                    <a class="dropdown-item" href="{{ path('setting') }}"><i class="dropdown-icon zmdi zmdi-settings"></i><span>Settings</span></a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="{{path('logout')}}"><i class="dropdown-icon zmdi zmdi-power"></i><span>Log out</span></a>
                                </div>
                            </li>
                        </ul>
                    </nav>
                <!-- /Top Navbar -->
            {% endblock %}

            
            <div class="hk-pg-wrapper">
                <div class="container mt-xl-50 mt-sm-30 mt-15">
                    {% block mainContent %}{% endblock %}
                </div>
            </div>
        </main>
        
        
        {% block javascripts %}
            <!-- jQuery -->
            <script src=" {{ asset('DashAsset/vendors4/jquery/dist/jquery.min.js') }} "></script>

            <!-- Bootstrap Core JavaScript -->
            <script src=" {{ asset('DashAsset/vendors4/popper.js/dist/umd/popper.min.js') }} "></script>
            <script src=" {{ asset('DashAsset/vendors4/bootstrap/dist/js/bootstrap.min.js') }} "></script>

            <!-- Slimscroll JavaScript -->
            <script src=" {{ asset('DashAsset/dist/js/jquery.slimscroll.js') }} "></script>

            <!-- Fancy Dropdown JS -->
            <script src=" {{ asset('DashAsset/dist/js/dropdown-bootstrap-extended.js') }} "></script>

            <!-- FeatherIcons JavaScript -->
            <script src=" {{ asset('DashAsset/dist/js/feather.min.js') }} "></script>

            <!-- Toggles JavaScript -->
            <script src=" {{ asset('DashAsset/vendors4/jquery-toggles/toggles.min.js') }} "></script>
            <script src=" {{ asset('DashAsset/dist/js/toggle-data.js') }} "></script>
            
            <!-- Toastr JS -->
            <script src=" {{ asset('DashAsset/vendors4/jquery-toast-plugin/dist/jquery.toast.min.js') }} "></script>
            
            <!-- Init JavaScript -->
            <script src=" {{ asset('DashAsset/dist/js/init.js') }} "></script>
            {% block scriptToAdd %}{% endblock %}
        {% endblock %}
    </body>
</html>
